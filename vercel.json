{
    "buildCommand": "npm install &&npm install --prefix client &&npm run build --prefix client",
    "outputDirectory": "./client/dist",
    "builds": [
      {
        "src": "server/index.js",
        "use": "@vercel/node"
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "server/index.js" 
      },
      {
        "src": "/(.*)", 
        "dest": "client/dist/index.html" 
      }
    ]
  }
  