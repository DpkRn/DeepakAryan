{
    "version": 2,
    "builds": [
      {
        "src": "server/index.js", 
        "use": "@vercel/node"      
      }
    ],
    "hooks": {
      "build": {
        "cmd": "cd client && npm install && npm run build && cd ../server && npm install"
      }
    },
    "routes": [
      {
        "src": "/(.*)",         
        "dest": "server/index.js" 
      }
    ]
  }
  